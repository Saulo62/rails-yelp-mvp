<h1>New Review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, in: 0..5, step: 1 %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to restaurant", restaurant_path(@restaurant), class: "btn btn-outline-secondary mt-3" %>
