<h1 class="text-center mb-5 display-4 fw-bold border-bottom pb-3">
  🍽️ All Restaurants
</h1>


<div class="mb-4 text-end">
  <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-success" %>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% @restaurants.each do |restaurant| %>
    <div class="col">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.category.capitalize %></h6>
          <p class="card-text"><strong>Phone:</strong> <%= restaurant.phone_number %><br>
            <strong>Address:</strong> <%= restaurant.address %></p>
        </div>
        <div class="card-footer bg-white border-0 text-end">
          <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-outline-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
